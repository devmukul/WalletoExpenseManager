<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalletoExpenseManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">#E9E9E9</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/purple_500</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="boxBackgroundColor">@color/background</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/purple_500</item>
    </style>
</resources>